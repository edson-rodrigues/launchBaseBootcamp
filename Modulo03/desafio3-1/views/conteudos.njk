{% extends "layout.njk" %}

<!DOCTYPE html>
<html lang="pt_br">
{% block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conteúdos</title>
    <link rel="stylesheet" href="/conteudos.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}
<body>
    {% block content %}
    
    <div id="wrapper">
        <h1>Conteúdos</h1>
    </div>
        <section class="cursos">
            {% for curso in cursos %}
            <div class="curso" id="{{curso.id}}">
                <div class="imagem-curso">
                    <img src="{{curso.imgSrc}}" alt="Imagem de {{curso.title}}">
                </div>
                <div class="conteudo-curso">
                    <p>
                        {{curso.title}}
                    </p>
                </div>
                <div class="info-curso">
                    <p>{{curso.modules}}</p>
                    <p class="preco-curso">{{curso.price}}</p>
                </div>
            </div>
            {% endfor %}
        </section>
        <div class="modal-overlay">
            <div class="modal">
                <a class="maximize-modal">
                    <i class="material-icons">maximize</i>
                </a>
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <div class="modal-content">
                     <iframe src="" frameborder="0"></iframe>
                </div>
            </div> 
         </div>
         <script src="/conteudos.js"></script>
    {% endblock %}
</body>
</html>